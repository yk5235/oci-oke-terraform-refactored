# ============================================
# TERRAFORM VARIABLES EXAMPLE - REFACTORED
# Copy this file to terraform.tfvars and fill in your values
# ============================================

# ============================================
# PROVIDER CONFIGURATION
# ============================================

region = "ap-singapore-1"

# ============================================
# COMMON
# ============================================

compartment_id = "ocid1.compartment.oc1..your-compartment-ocid-here"

# ============================================
# PUBLIC/PRIVATE CONFIGURATION
# Set to true to make subnets public, false for private
# ============================================

kubapi_subnet_is_public = false  # Set to true for public Kubernetes API
lb_subnet_is_public     = false  # Set to true for public Load Balancers

# ============================================
# NETWORKING (Optional - uses defaults)
# ============================================

# vcn_cidr         = "10.0.0.0/16"
# vcn_display_name = "vcn-okedev"
# vcn_dns_label    = "okedev"
# nat_display_name = "ng-okedev"
# svc_display_name = "sg-okedev"
# igw_display_name = "ig-okedev"

# ============================================
# OKE CLUSTER (Optional - uses defaults)
# ============================================

# cluster_name                       = "oke-cluster-dev"
# kubernetes_version                 = "v1.32.1"
# cluster_type                       = "ENHANCED_CLUSTER"
# cni_type                           = "OCI_VCN_IP_NATIVE"
# is_kubernetes_dashboard_enabled    = false

# ============================================
# NODE POOL (Required: ssh_public_key)
# ============================================

ssh_public_key = "ssh-rsa AAAAB3... your-ssh-public-key-here"

# Optional node pool configuration
# node_pool_name                            = "oke-node-pool-dev"
# node_shape                                = "VM.Standard.E3.Flex"
# node_count                                = 2
# node_pool_node_shape_config_ocpus         = 2
# node_pool_node_shape_config_memory_in_gbs = 16
# boot_volume_size_in_gbs                   = 50
# max_pods_per_node                         = null
# nsg_ids                                   = []
# pod_nsg_ids                               = []